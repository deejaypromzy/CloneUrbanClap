<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:gravity="fill_horizontal|center" android:id="@android:id/background">
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/margin_4" />
			<size android:height="@dimen/margin_8" />
			<solid android:color="@color/light_royal_alpha" />
		</shape>
	</item>
	<item android:gravity="fill_horizontal|center" android:id="@android:id/secondaryProgress">
		<scale android:scaleWidth="100%">
			<selector>
				<item android:state_enabled="false">
					<shape android:shape="rectangle">
						<corners android:radius="@dimen/margin_4" />
						<solid android:color="@color/light_royal_alpha" />
					</shape>
				</item>
				<item>
					<shape android:shape="rectangle">
						<corners android:radius="@dimen/margin_4" />
						<size android:height="@dimen/margin_8" />
						<solid android:color="@color/light_royal_blue" />
					</shape>
				</item>
			</selector>
		</scale>
	</item>
	<item android:gravity="fill_horizontal|center" android:id="@android:id/progress">
		<scale android:scaleWidth="100%">
			<selector>
				<item android:state_enabled="false">
					<shape android:shape="rectangle">
						<corners android:radius="@dimen/margin_4" />
						<size android:height="@dimen/margin_8" />
						<solid android:color="@color/light_royal_alpha" />
					</shape>
				</item>
				<item>
					<shape android:shape="rectangle">
						<corners android:radius="@dimen/margin_4" />
						<solid android:color="@color/light_royal_blue" />
						<size android:height="@dimen/margin_8" />
					</shape>
				</item>
			</selector>
		</scale>
	</item>
</layer-list>
