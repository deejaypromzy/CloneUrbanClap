<?xml version="1.0" encoding="utf-8" ?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_home_screen"
    android:layout_width="fill_parent"
    android:layout_height="56.0dip"
    android:background="@color/black"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:contentInsetLeft="0.0dip"
    app:contentInsetStart="0.0dip"
    app:layout_collapseMode="parallax">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/location_text_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:drawableLeft="@drawable/ic_location_on_black"
            android:textColor="@color/white"
            android:textSize="16.0sp" />

        <LinearLayout
            android:id="@+id/homescree_activity_location_container"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_8"
            android:paddingTop="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_8"
            android:paddingBottom="@dimen/margin_16">

            <TextView
                android:id="@+id/home_screen_selected_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="140dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxWidth="270dp"
                android:text="Please select location.."
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14sp" />
        </LinearLayout>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/include_searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/margin_16"
            android:drawableTint="@android:color/white"
            android:drawableEnd="@drawable/ic_search_black"
            android:textSize="16sp"
            android:visibility="visible"
            android:drawableRight="@drawable/ic_search_black" />

    </LinearLayout>
</androidx.appcompat.widget.Toolbar>
