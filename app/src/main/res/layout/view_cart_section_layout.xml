<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_grey_border_4"
    android:orientation="vertical"
    android:padding="@dimen/margin_5">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:orientation="vertical"
        android:background="@color/windowBackground"
        android:padding="@dimen/margin_5">

        <TextView
            android:id="@+id/serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Shower Installation - Ceilling Mounted"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="normal" />

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/grey_bg_light"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_5">

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:drawableStart="@drawable/rupee"
            android:drawableLeft="@drawable/rupee"
            android:drawablePadding="@dimen/margin_5"
            android:text="Rupee 119"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_price_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_price"
            android:layout_margin="@dimen/margin_5"
            android:text="Total Price :"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_price"
            android:layout_margin="@dimen/margin_5"
            android:layout_toRightOf="@id/txt_price_off"
            android:drawableLeft="@drawable/rupee"
            android:drawablePadding="@dimen/margin_5"
            android:text="100"
            android:textColor="@color/black" />

        <LinearLayout
            android:id="@+id/minuPlus"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/btn_round_blue_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/minus_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_remove_black"
                android:drawableTint="@color/light_royal_blue"
                android:focusable="true"
                android:padding="@dimen/margin_2"
                android:visibility="visible" />

            <TextView
                android:id="@+id/add_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_2"
                android:text="0"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/plus_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_add_black"
                android:drawableTint="@color/light_royal_blue"
                android:focusable="true"
                android:padding="@dimen/margin_2" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/margin_10"
            android:padding="@dimen/margin_10"
            android:layout_below="@id/minuPlus"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_remove_shopping_cart_black"
            android:drawableTint="@color/light_royal_blue"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>
