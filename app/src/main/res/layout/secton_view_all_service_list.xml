<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_2"
    android:background="@drawable/border_grey_light"
    android:clickable="true"
    android:elevation="@dimen/margin_5"
    android:focusable="true"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/view_all_service_list_item_image"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:contentDescription="TODO"
            android:padding="@dimen/margin_2"
            android:scaleType="centerCrop"
            android:src="@drawable/round_corners" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:layout_toRightOf="@id/view_all_service_list_item_image"
            android:fontFamily="sans-serif-medium"
            android:maxEms="11"
            android:text="Chimney Depp Cleaning(Without )"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_tv"
            android:layout_margin="@dimen/margin_5"
            android:layout_toRightOf="@id/view_all_service_list_item_image"
            android:fontFamily="sans-serif"
            android:text="Rupee 200"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/offer_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_tv"
            android:layout_margin="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_toRightOf="@id/price_tv"
            android:fontFamily="sans-serif-thin"
            android:text="200"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/type_of_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_tv"
            android:layout_margin="@dimen/margin_5"
            android:layout_toRightOf="@id/view_all_service_list_item_image"
            android:text="Type of service"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/serviceTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_tv"
            android:layout_margin="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_toRightOf="@id/type_of_service"
            android:drawableLeft="@drawable/ic_access_time_black"
            android:drawablePadding="@dimen/margin_4"
            android:drawableTint="@color/light_royal_blue"
            android:text="70 min" />

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_tv"
            android:layout_alignParentRight="true"
            android:drawableEnd="@drawable/ic_keyboard_arrow_right_black"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black"
            android:drawableTint="@color/light_royal_blue"
            android:text="Details"
            android:textColor="@color/light_royal_blue"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_of_service"
            android:layout_margin="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_toRightOf="@id/view_all_service_list_item_image"
            android:drawableTint="@color/light_royal_blue"
            android:text="Total Price : "
            android:textColor="@color/black"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/totalPrice_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/type_of_service"
            android:layout_margin="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_toRightOf="@id/totalPrice"
            android:drawableTint="@color/light_royal_blue"
            android:text="Total Price"
            android:textColor="@color/black"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_round_blue_bg"
            android:layout_margin="@dimen/margin_5"
            android:orientation="horizontal">

            <TextView
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/minus_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_remove_black"
                android:drawableTint="@color/light_royal_blue"
                android:textColor="@color/light_royal_blue"
                android:padding="@dimen/margin_5"
                android:visibility="visible" />

                <TextView
                    android:text="0"
                    android:contextClickable="true"
                    android:id="@+id/add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/margin_5" />
                <TextView
                    android:foreground="?attr/selectableItemBackground"
                    android:contextClickable="true"
                    android:id="@+id/plus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawableLeft="@drawable/ic_add_black"
                    android:drawableTint="@color/light_royal_blue"
                    android:focusable="true"
                    android:padding="@dimen/margin_5" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
