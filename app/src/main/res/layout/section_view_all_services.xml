<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/all_service_section_cardV_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/margin_5"
    app:cardElevation="@dimen/margin_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/hotsellerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/green_confirm"
            android:padding="@dimen/margin_5"
            android:text="Hotseller"
            android:textColor="@color/white" />


        <HorizontalScrollView
            android:id="@+id/horrizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotsellerText"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <com.google.android.material.circularreveal.CircularRevealGridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:src="@drawable/electrician" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:src="@drawable/electrician" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:src="@drawable/electrician" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:src="@drawable/electrician" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:src="@drawable/electrician" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:elevation="10dp"
                        app:cardCornerRadius="6dp">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:src="@drawable/electrician" />
                    </androidx.cardview.widget.CardView>
                </com.google.android.material.circularreveal.CircularRevealGridLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/horrizontalScrollView"
            android:padding="@dimen/margin_10">

            <TextView
                android:id="@+id/tv_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5"
                android:text="Service name"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/rupeeService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_service_name"
                android:layout_margin="@dimen/margin_5"
                android:text="Price Rupee :499"
                android:textSize="@dimen/margin_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_service_name"
                android:layout_margin="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_toEndOf="@id/rupeeService"
                android:layout_toRightOf="@id/rupeeService"
                android:text="@string/dummy_rupee"
                android:visibility="gone" />

            <TextView
                android:id="@+id/serviceTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rupeeService"
                android:layout_margin="@dimen/margin_5"
                android:drawableLeft="@drawable/ic_access_time_black"
                android:drawablePadding="@dimen/margin_4"
                android:drawableTint="@color/light_royal_blue"
                android:text="70 min" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_round_blue_bg"
                android:elevation="@dimen/margin_2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_remove_black"
                    android:drawableTint="@color/light_royal_blue"
                    android:padding="@dimen/margin_5"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_5"
                    android:text="ADD"
                    android:textAllCaps="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_add_black"
                    android:drawableTint="@color/light_royal_blue"
                    android:padding="@dimen/margin_5" />
            </LinearLayout>


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/serviceTime"
                android:background="@drawable/horizontal_divider_dashed" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:orientation="vertical">

                <include layout="@layout/view_all_srvice_text" />

                <include layout="@layout/view_all_srvice_text" />

                <include layout="@layout/view_all_srvice_text" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout1"
            android:layout_margin="@dimen/margin_8"
            android:background="@drawable/rounded_white_grey_border_4"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_black"
            android:drawablePadding="@dimen/margin_2"
            android:drawableTint="@color/light_royal_blue"
            android:elevation="@dimen/margin_2"
            android:padding="@dimen/margin_8"
            android:text="Edit this package"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/light_royal_blue" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>