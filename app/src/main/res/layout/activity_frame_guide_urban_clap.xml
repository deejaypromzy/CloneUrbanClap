<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg_light"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_f_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:minHeight="?actionBarSize">

            <include layout="@layout/custom_toolbar_layout" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_below="@id/appbar_f_booking"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookSerice0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black"
                    android:padding="@dimen/margin_15"
                    android:text="About App Name"
                    android:textColor="@color/black87"
                    android:textSize="@dimen/text_size_16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"/>
                <TextView
                    android:id="@+id/bookSerice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black"
                    android:padding="@dimen/margin_15"
                    android:text="Dose App Name provide any service gurantee ?"
                    android:textColor="@color/black87"
                    android:textSize="@dimen/text_size_16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_1"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</FrameLayout>